<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:icon="@drawable/ic_launcher"
    android:key="subs_screen"
    android:persistent="false"
    android:title="Subscreen">

        <PreferenceCategory android:title="Temperature service">
            <CheckBoxPreference
                android:key="StartService"
                android:title="Start service automatically"
                android:defaultValue="true"/>
            <com.holger.mashpit.prefs.TopicListPreference
                android:defaultValue="@array/pref_topic_list_default"
                android:summary="@string/pref_topic_list_summary"
                android:title="@string/pref_topic_list_title"
                android:key="service_topics"/>
        </PreferenceCategory>
</PreferenceScreen>