<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:icon="@drawable/ic_launcher"
    android:key="subs_screen"
    android:persistent="false"
    android:title="Subscreen">

        <PreferenceCategory android:title="@string/prefs_mqtt_title">
            <com.holger.mashpit.prefs.SettingsEdit
                android:key="broker_url"
                android:title="@string/prefs_mqtt_broker"
                android:summary="@string/prefs_mqtt_broker_sum"
                android:defaultValue="192.168.1.20"/>
            <com.holger.mashpit.prefs.SettingsEdit
                android:key="broker_port"
                android:title="@string/prefs_mqtt_port"
                android:summary="1883"
                android:inputType="number"
                android:digits="0123456789"
                android:defaultValue="1883"/>
            <Preference android:title="@string/title_activity_find_server"
                android:key="find server">
            </Preference>
            <com.holger.mashpit.prefs.SettingsEdit
                android:key="device_id"
                android:title="Device ID"
                android:summary=""
                android:enabled="false"
                android:defaultValue=""/>
        </PreferenceCategory>
    <Preference
        android:title="Subscriber List"
        android:summary="Some Description">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.holger.mptest"
            android:targetClass="com.holger.mptest.SubscribeListActivity"
            />
    </Preference>
</PreferenceScreen>
