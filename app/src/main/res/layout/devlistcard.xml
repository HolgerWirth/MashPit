<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/devcard_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/devTypeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/mpstatProcTypeTitle"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <TextView
            android:id="@+id/devType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/mpstatProcTypeTitle"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <TextView
            android:id="@+id/devNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/devTypeTitle"
            android:text="@string/devNameTitle"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <TextView
            android:id="@+id/devName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_below="@id/devTypeTitle"
            android:text="@string/devNameTitle"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <TextView
            android:id="@+id/devStatusTitle"
            android:layout_below="@id/devNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/mpstatProcStatusTitle"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <TextView
            android:id="@+id/devStatus"
            android:layout_below="@id/devNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/mpstatProcStatusTitle"
            android:textSize="@dimen/abc_text_size_medium_material" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>