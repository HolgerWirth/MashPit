<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sensoredit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:orientation="vertical">

        <ernestoyaquello.com.verticalstepperform.VerticalStepperFormView
            android:id="@+id/stepper_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:form_cancel_button_background_color="@android:color/transparent"
            app:form_cancel_button_pressed_background_color="@android:color/transparent"
            app:form_cancel_button_pressed_text_color="@color/primaryDarkColor"
            app:form_cancel_button_text_color="@color/primaryColor"
            app:form_circle_background_color="@color/primaryColor"
            app:form_display_cancel_button_in_last_step="true"
            app:form_last_button_text="Create"
            app:form_next_button_background_color="@color/primaryColor"
            app:form_next_button_pressed_background_color="@color/primaryDarkColor" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
